{
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
    },
    "files.autoSave": "afterDelay",
    "black-formatter.args": ["--line-length", "90"],
    "flake8.args": [
        "--max-line-length=90",
    ],
    "pylint.enabled": true,
    "pylint.args": [
        "\"pylint.args\": [\"--extension-pkg-whitelist=PyQt5\"]"
    ]
}
